<article id="blogArchive" class="page-blog-archive">
  <section class="comp-underpage-section">
    <div class="section_inner">
      <div class="comp-section-title no_line">
        <span class="title_en"><ls-static-562328>BLOG&NEWS</ls-static-562328></span>
        <h1 class="title_ja"><ls-static-619222>ブログ&amp;ニュース</ls-static-619222></h1>
      </div>
      <div class="comp-category-filter news">
        <div class="filter_ttl"><ls-static-8505>カテゴリーで絞り込む</ls-static-8505></div>
        <div class="category_list">
          <a class="all" href="/blogs/all"><ls-static-46771>すべて</ls-static-46771></a>
          <a class="education" href="/blogs/all/tagged/education"><ls-static-139383>教育</ls-static-139383></a>
          <a class="sports" href="/blogs/all/tagged/sports"><ls-static-507697>スポーツ</ls-static-507697></a>
          <a class="golf" href="/blogs/all/tagged/golf"><ls-static-310865>ゴルフ</ls-static-310865></a>
          <a class="healthcare" href="/blogs/all/tagged/healthcare"><ls-static-253597>ヘルスケア</ls-static-253597></a>
          <a class="news" href="/blogs/all/tagged/news"><ls-static-864267>お知らせ</ls-static-864267></a>
        </div>
      </div><!-- comp-category-filter -->
      {% paginate blog.articles by 12 %}
      <div class="news_list_wrap">
        <div class="comp-news-list">
        {% for article in blog.articles %}
        <div class="list_item">
          <div class="img_wrap">
          {% if article.image.src %}
            <a href="{{ article.url }}" style="background-image: url({% comment ls-rpl %}{{ article.image.src | img_url: '750x' }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: article.image.src, img_url: '750x' -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %})">
          {% else %}
            <a href="{{ article.url }}" style="background-image: url(https://res.cloudinary.com/halsports/image/upload/f_auto,q_auto/v1596432101/ogp/ogp_rlvdwy.jpg)">
          {% endif %}
          {% for tag in article.tags %}
            <span class="category {% comment ls-rpl %}{{ tag }}{% endcomment %}{%- capture LS_TAG -%}{%- render "ls-tag", tag: tag, resource: article -%}{%- endcapture -%}{{ LS_TAG }}{% comment /ls-rpl %}{% endcomment %}"></span>
          {% endfor %}
            </a>
          </div>
          <div class="txt_wrap">
            <div class="news_info">
              {% for tag in article.tags %}
                <span class="category {% comment ls-rpl %}{{ tag }}{% endcomment %}{%- capture LS_TAG -%}{%- render "ls-tag", tag: tag, resource: article -%}{%- endcapture -%}{{ LS_TAG }}{% comment /ls-rpl %}{% endcomment %}"></span>
                {% endfor %}
              <span class="date">{{ article.published_at | time_tag: format: 'date' }}</span>
            </div>
            <a class="news_title" href="{{ article.url }}">{{ article.title }}</a>
          </div>
        </div>
        <!-- list_item -->
        {% endfor %}
      </div><!-- comp-news-list -->
      {%- if paginate.pages > 1 -%}
      <div class="comp-pagenation">
        {% include 'pagination', paginate: paginate %}
      </div>
      {%- endif -%}

      {% endpaginate %}
    </div><!-- news_list_wrap -->
    </div><!-- section_inner -->
  </section>
</article>



