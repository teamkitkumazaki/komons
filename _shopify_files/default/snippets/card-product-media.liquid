<img
  srcset="{%- if thumb_image.width >= 165 -%}{{ thumb_image | image_url: width: 165 }} 165w,{%- endif -%}
  {%- if thumb_image.width >= 360 -%}{{ thumb_image | image_url: width: 360 }} 360w,{%- endif -%}
  {%- if thumb_image.width >= 533 -%}{{ thumb_image | image_url: width: 533 }} 533w,{%- endif -%}
  {%- if thumb_image.width >= 720 -%}{{ thumb_image | image_url: width: 720 }} 720w,{%- endif -%}
  {%- if thumb_image.width >= 940 -%}{{ thumb_image | image_url: width: 940 }} 940w,{%- endif -%}
  {%- if thumb_image.width >= 1066 -%}{{ thumb_image | image_url: width: 1066 }} 1066w,{%- endif -%}
  {{ thumb_image | image_url }} {{ thumb_image.width }}w"
  src="{{ thumb_image | image_url: width: 533 }}"
  alt="{{ product.title }}"
  loading="lazy"
  width="{{ thumb_image.width }}"
  height="{{ thumb_image.height }}"
>
