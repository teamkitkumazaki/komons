<div class="wrapper_inner">
	<div class="comp-admin-subttl">
		<h2 class="ttl">新しい住所の追加</h2>
	</div>
	<div class="comp-admin-form">
		{% form 'customer_address', customer.new_address %}
		<div class="form_item column2">
			<div class="flex_box">
				<label>お名前(姓)</label>
				<div class="form_wrap">
					<input type="text" id="AddressLastNameNew" name="address[last_name]" value="{{ form.last_name }}" autocomplete="family-name" placeholder="山田" class="admin">
				</div>
			</div>
			<div class="flex_box">
				<label>お名前(名)</label>
				<div class="form_wrap">
					<input type="text" id="AddressFirstNameNew" name="address[first_name]" value="{{ form.first_name }}" autocomplete="given-name" placeholder="太郎" class="admin">
				</div>
			</div>
		</div>
		<!-- <div class="form_item">
			<label>会社名</label>
			<div class="form_wrap">
				<input type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" autocomplete="organization" placeholder="株式会社Unsungs&Web" class="admin">
			</div>
		</div> -->
		<div class="form_item">
			<label>郵便番号</label>
			<div class="form_wrap">
				<input type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" autocomplete="postal-code" placeholder="170-0005" class="admin">
			</div>
		</div>
		<div class="form_item">
			<label>住所(都道府県・市町村)</label>
			<div class="form_wrap">
				<input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" autocomplete="address-level2" placeholder="東京都豊島区" class="admin">
			</div>
		</div>
		<div class="form_item">
			<label>住所(市町村以下の住所・建物名)</label>
			<div class="form_wrap">
				<input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}" autocomplete="street-address address-line1" placeholder="南大塚3-36-7" class="admin">
			</div>
		</div>
		<div class="form_item">
			<label>電話番号</label>
			<div class="form_wrap">
				<input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" autocomplete="phone" placeholder="03-1234-5678" class="admin">
			</div>
		</div>
		<div class="form_item">
			<div class="checkbox">
				<label>
					<input type="checkbox" id="address_default_address_new" name="address[default]" value="1">
					<span class="radio_checker"></span>
					<span class="name">デフォルトの配送先として登録する</span>
				</label>
			</div>
		</div>
		<div id="submitButton" class="comp-admin-button">
			<input type="submit" class="btn" value="配送先情報を登録">
		</div>
		{% endform %}
	</div><!-- comp-admin-form -->
</div>
