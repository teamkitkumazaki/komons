<header>
  <div class="header_inner">
    <div id="humMenu">
      <a href="javascript:void(0);"></a>
    </div>
    <div id="hLogo">
      <a href="https://komons-japan.myshopify.com/"></a>
    </div>
    <div id="hNavi">
      <div id="hLogin" class="nav_item">
      {% if customer %}
        <a href="{{ routes.account_url }}">マイページ</a>
      {% else %}
      <a href="{{ routes.account_login_url }}">ログイン</a>
      {% endif %}
      </div>
      <div id="hCart" class="nav_item">
        <a href="/cart">
          <span class="text">カート</span>
          {%- if cart.item_count > 0 -%}
          <span id="cartItemNum" class="cart_item_num">{{ cart.item_count }}</span>
          {%- endif -%}
        </a>
      </div>
    </div>
  </div>
</header>
