          <div class="staff_img">
            <img src="{{ 'staff_nakagawa.jpg' | asset_url }}">
          </div>
          <div class="staff_txt">
            <div class="name_wrap">
              <div class="name_en">TAKASHI NAKAGAWA</div>
              <h4 class="name_jp">中川 崇司</h4>
            </div>
            <div class="staff_desc">
              <div class="position">オーナー</div>
