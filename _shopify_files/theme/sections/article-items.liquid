{% if article.metafields["custom_fields"]["related_product"] != blank %}

<section class="section-related-item">
  <div class="section_inner_new">
    <div class="comp-new-section-ttl">
      <hgroup>
        <span class="title_en">Related Items</span>
        <h1 class="title_jp" style="text-indent: -0.2em;">この記事に関連する商品</h1>
      </hgroup>
    </div><!-- comp-new-section-ttl -->
    <div id="productList" class="comp-product-block">
      <ul class="item_wrapper">
        {% for item in article.metafields["custom_fields"]["related_product"] %}
        {% for collection in collections %}
        {%- if collection.handle == "ajax" -%}
        {% for product in collection.products %}
          {%- if product.handle == item["products"] -%}
            {%- include 'all-item-card' -%}
          {%- endif -%}
        {% endfor %}
        {%- endif -%}
        {% endfor %}
        {% endfor %}
      </ul>
    </div>
    <!-- comp-item-group -->
  </div><!-- section_inner_new -->
</section>
{% endif %}
